<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/titini_gold"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mosambitech.pucresults.LaunchActivity"
    tools:showIn="@layout/app_bar_launch">

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/relsub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50">

                <android.support.v7.widget.CardView

                    android:id="@+id/btn_sslc"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:background="#E0F2F1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/ele1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/description_black"
                            android:text="Elements"
                            android:textSize="27sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ele"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ele1"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="SSLC "
                            android:textSize="27sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_cet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_sslc"
                    android:layout_marginTop="10dp"

                    android:background="#E0F2F1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/alarm_black"
                            android:text="Elements"
                            android:textSize="27sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ele1"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="CET"
                            android:textSize="27sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relsub2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="50">

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_puc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#E0F2F1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/class_black"

                            android:textSize="27sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ele1"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="PUC"
                            android:textSize="27sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_comedk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_puc"
                    android:layout_marginTop="10dp"

                    android:background="#E0F2F1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/grade_black"
                            android:text="Elements"
                            android:textSize="27sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ele1"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="COMED K"
                            android:textSize="27sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
